{
  "manifestVersion": 1,
  "id": "vsts-replace-use-xpath",
  "version": "0.1.13",
  "name": "XPath Replace",
  "scopes": [ "vso.work", "vso.work_write" ],
  "description": "Replace content in XML files by XPath",
  "baseUri": "https://github.com/tanihiroki/vsts-replace-use-xpath",
  "publisher": "tanihiroki",
  "public": false,
  "icons": {
    "default": "images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": [
    "xml, replace, file, tasks, variable"
  ],
  "links": {
    "support": { "uri": "https://github.com/tanihiroki/vsts-replace-use-xpath/issues" }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/tanihiroki/vsts-replace-use-xpath.git"
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE",
      "contentType": "text/plain"
    }
  },
  "files": [
    {
      "path": "Tasks"
    },
    {
      "path": "node_modules/vss-web-extension-sdk/lib",
      "addressable": true,
      "packagePath": "lib"
    }

  ],
  "categories": [
    "Build and release"
  ],
  "contributions": [
    {
      "id": "vsts-replace-use-xpath",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "type": "ms.vss-distributed-task.task",
      "properties": {
        "name": "Tasks"
      }
    }
  ]
}
